{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@chameleon/core": ["packages/core/src"],
      "@chameleon/db": ["packages/db/src"],
      "@chameleon/tool-registry": ["packages/tool-registry/src"],
      "@chameleon/ai": ["packages/ai/src"],
      "@chameleon/workflow-adapter": ["packages/workflow-adapter/src"],
      "@chameleon/email": ["packages/modules/email/src"],
      "@chameleon/crm": ["packages/modules/crm/src"],
      "@chameleon/workflow": ["packages/modules/workflow/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "out"]
}